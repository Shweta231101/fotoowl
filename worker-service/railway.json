{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "celery -A app.celery_app worker --loglevel=info -Q google_drive,dropbox --concurrency=4",
    "restartPolicyType": "ON_FAILURE"
  }
}
